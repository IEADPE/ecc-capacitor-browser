{
  "name": "@ieadpe/ecc-capacitor-browser",
  "version": "1.1.0",
  "description": "IEADPE: Capacitor plugin to Open inAppBrowser",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources",
    "ios/Tests",
    "Package.swift",
    "EccCapacitorBrowser.podspec"
  ],
  "author": "Fontos Soluções <ieadpe@ieadpe.com.br>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IEADPE/ecc-capacitor-browser"
  },
  "bugs": {
    "url": "https://github.com/IEADPE/ecc-capacitor-browser/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native",
    "ieadpe"
  ],
  "scripts": {
    "deploy:release:linux": "npm run build && npm version patch -m \"Upgrade to v%s\" && npm run gh:release",
    "gh:release": "echo -e \"\nLeave blank\nNo\nPublish release\n\" | gh release create 'v'\"$npm_package_version\" --title 'v'\"$npm_package_version\" ",
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "xcodebuild build -scheme EccCapacitorBrowser -sdk iphonesimulator17.5 -destination 'OS=17.5,name=iphonesimulator17.5'",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\"",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api EccCapacitorBrowserPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.js",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "publish:cocoapod": "pod trunk push EccCapacitorBrowser.podspec --allow-warnings"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/docgen": "0.2.2",
    "@capacitor/ios": "^6.0.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "~1.0.1",
    "@ionic/swiftlint-config": "^1.1.2",
    "eslint": "^7.11.0",
    "prettier": "~2.3.0",
    "prettier-plugin-java": "~1.0.2",
    "rimraf": "^3.0.0",
    "rollup": "^2.29.0",
    "swiftlint": "^1.0.1",
    "typescript": "~4.1.5"
  },
  "peerDependencies": {
    "@capacitor/core": "^6.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
